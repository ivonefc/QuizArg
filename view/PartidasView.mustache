<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container" style="background-color: #031b71;">
    <div class="row">
        <!-- Columna de partidas -->
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <div class="pagination-button">
                    {{#prevPage}}
                        <a href="?page={{prevPage}}" class="btn btn-secondary">&laquo; Mas recientes</a>
                    {{/prevPage}}
                </div>
                <h2 class="text-center mb-0 flex-grow-1" style="background: black; color: white; width: 742px; border:white solid 2px; border-bottom: none">Historial de mis partidas</h2>
                <div class="pagination-button text-right">
                    {{#nextPage}}
                        <a href="?page={{nextPage}}" class="btn btn-secondary">Mas antiguas &raquo;</a>
                    {{/nextPage}}
                </div>
            </div>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col" class="text-center" style="background: black; color: white; border: 2px solid white; border-right: none">Mi Partida</th>
                    <th scope="col" class="text-center" style="background: black; color: white;  border: 2px solid white; border-left: none">Puntaje</th>
                </tr>
                </thead>
                <tbody>
                {{#partidas}}
                    <tr>
                        <td class="text-center" style="background: white">{{fecha_creacion}}</td>
                        <td class="text-center" style="background: white">{{puntaje}}</td>
                    </tr>
                {{/partidas}}
                </tbody>
            </table>
            <div class="text-center mt-3">
                <a href="/Home" class="btn btn-primary">Volver a Inicio</a>
            </div>
        </div>
    </div>
</div>

<!-- Scripts de Bootstrap y jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<main class="w3-card-4 py-5">
    <div class="content container px-lg-5 p-4 bg-light rounded-3">
        <h1 class="text-center display-2 fw-bold">¡Bienvenido {{username}}!</h1>
        <h2 class="text-center">¿Qué deseas consultar hoy?</h2>
        <article class="d-grid gap-2 col-6 mx-auto mt-4">
            <a href="/Users/getAdminDashboard" class="btn btn-outline-primary btn-lg btn-block mb-3">Dashboard de Administración</a>

            <!-- Botón para abrir el modal -->
            <button type="button" class="btn btn-outline-primary btn-lg btn-block mb-3" data-toggle="modal" data-target="#usuariosNuevosModal">
                Usuarios Nuevos
            </button>

            <!-- Cambiar el botón para redirigir a la acción mostrarPorcentajeAciertos -->
            <a href="/Users/mostrarPorcentajeAciertos" class="btn btn-outline-primary btn-lg btn-block mb-3">Porcentaje de Aciertos por Jugador</a>
        </article>
    </div>
</main>

<!-- Modal para ingresar fechas -->
<div class="modal fade" id="usuariosNuevosModal" tabindex="-1" role="dialog" aria-labelledby="usuariosNuevosModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="usuariosNuevosModalLabel">Usuarios Nuevos - Selección de Fechas</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/Users/getUsuariosNuevos" method="GET">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="fecha_inicio">Fecha de Inicio</label>
                        <input type="date" class="form-control" id="fecha_inicio" name="fecha_inicio" required value="2024-01-01">
                    </div>
                    <div class="form-group">
                        <label for="fecha_fin">Fecha de Fin</label>
                        <input type="date" class="form-control" id="fecha_fin" name="fecha_fin" required value="2024-12-31">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Consultar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Scripts de Bootstrap y jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

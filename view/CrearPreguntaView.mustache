<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<main class="py-5">

    <div class="w3-card-4">
        <div class="content container px-lg-5 p-4 bg-light rounded-3">
            <div class="alert alert-danger" role="alert">
                {{error}}
            </div>
            <form action="/Preguntas/agregarPregunta" method="post" enctype="multipart/form-data">
                <input type="hidden" name="controller" value="Preguntas">
                <input type="hidden" name="action" value="agregarPregunta">
                <div class="row">
                    <div class="col-md-6 offset-md-3">
                        <div class="form-group">
                            <label>Pregunta</label>
                            <input required name="descripcion" class="form-control" placeholder="Por ejemplo.. ¿Cómo se llama el mejor juego de trivia?">
                        </div>
                        <div class="form-group">
                            <label>Respuesta A</label>
                            <input required name="opcionA" class="form-control" placeholder="Pregunton">
                        </div>
                        <div class="form-group">
                            <label>Respuesta B</label>
                            <input required name="opcionB" class="form-control" placeholder="Preguntitas">
                        </div>
                        <div class="form-group">
                            <label>Respuesta C</label>
                            <input required name="opcionC" class="form-control" placeholder="Yo soy pregunton">
                        </div>
                        <div class="form-group">
                            <label>Respuesta D</label>
                            <input required name="opcionD" class="form-control" placeholder="Preguntonton">
                        </div>
                        <div class="form-group">
                            <label>Categoria</label>
                            <select name="idCategoria" class="form-control" required>
                                <option value="1">Deportes</option>
                                <option value="2">Greografía</option>
                                <option value="3">Historia</option>
                                <option value="4">Ciencia</option>
                                <option value="5">Programación</option>
                                <option value="6">Cultura general</option>

                            </select>
                        </div>
                        <div class="form-group">
                            <label>Respuesta correcta</label>
                            <select name="respuestaCorrecta" class="form-control" required>
                                <option value="A">A</option>
                                <option value="B">B</option>
                                <option value="C">C</option>
                                <option value="D">D</option>
                            </select>
                        </div>
                        <div class="d-flex justify-content-center">
                            <br>
                            <a href="../index.php" class="btn btn-primary m-3">Volver</a>
                            <button type="submit" class="btn btn-primary m-3">Crear pregunta</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

</main>
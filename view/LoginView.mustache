<link rel="icon" href="../logo.png">
<div class="w3-container w3-card-4 w3-light-grey w3-text-black" id="contenedorLogin">
    <h2 class="w3-center w3-green">{{message}}</h2>
    <h2 class="w3-center" style="color: white">Iniciar sesión</h2>
    <form class="w3-container" action="" method="post">
        <div class="w3-section">
            <label for="username"><b>Usuario/Email</b></label>
            <input class="w3-input w3-border w3-margin-bottom" type="text" id="username" name="username" required>
            <label for="password"><b>Contraseña</b></label>
            <input class="w3-input w3-border" type="password" id="password" name="password" required>
            <p style="color: red">{{error}}</p>
            <input type="hidden" id="action" name="action" value="postLogin">
            <input type="hidden" id="controller" name="controller" value="Users">
            <button class="w3-button w3-block w3-black w3-section w3-padding" type="submit">Iniciar sesión</button>
            <button class="w3-button w3-block w3-red w3-section w3-padding" type="button" onclick="window.location.href='/Users/getRegister'">Quiero Registrarme</button>
        </div>
    </form>
</div>
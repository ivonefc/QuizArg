<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<div class="w3-card-4" style="background: #f62e2e; margin-top: 50px" id="perdistee">
    <div class="text-center">
        <h1 style="color: white">Perdiste</h1>
    </div>
    <div class="">
        <h2>{{pregunta.texto}}</h2>
    </div>
    <div class="container mt-5">
        <div id="respuestas" class="list-group mb-3">
            {{#respuestas}}
                <div class="list-group-item list-group-item-action respuesta py-3
                    {{#esRespuestaSeleccionada}}bg-danger{{/esRespuestaSeleccionada}}
                    {{#esRespuestaCorrecta}}bg-success{{/esRespuestaCorrecta}}
                    " data-respuesta-id="{{_id}}">{{texto}}</div>
            {{/respuestas}}
        </div>
    </div>
    <div class="alert alert-info mt-3 text-center" role="alert">
        Puntaje Final: {{puntos}}
    </div>
    <div class="text-center mt-3">
        <a href="/Home" class="btn btn-primary">Volver al inicio</a>
    </div>
</div>

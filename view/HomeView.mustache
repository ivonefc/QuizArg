<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<h1 class="w3-center">Hola, {{username}}!</h1>
<p class="w3-center">Te deseamos una gran experiencia.</p>
<a href="/Game/startGame"><button>Jugar Partida</button></a>

<div class="modal fade" id="perdisteModal" tabindex="-1" aria-labelledby="perdisteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="perdisteModalLabel">Resultado</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p><strong>{{mensaje}}</strong></p>
                <p>Puntaje: {{puntaje}}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!-- Scripts de Bootstrap y jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    // JavaScript para manejar el modal
    $(document).ready(function() {
        var mensaje = '{{mensaje}}';
        if (mensaje) {
            $('#perdisteModal').modal('show');
        }
    });
</script>


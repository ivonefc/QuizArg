<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="content container px-lg-5 p-4 bg-light rounded-3 w3-card-4">
    <h1 class="text-center display-4 fw-bold">Porcentaje de Aciertos de los Jugadores</h1>
    <div class="table-responsive mt-4">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Nombre de Usuario</th>
                <th class="text-center">Preguntas Jugadas</th>
                <th class="text-center">Preguntas Acertadas</th>
                <th class="text-center">Porcentaje de Aciertos</th>
            </tr>
            </thead>
            <tbody>
            {{#datosJugadores}}
                <tr>
                    <td class="text-center">{{_ID}}</td>
                    <td class="text-center">{{USERNAME}}</td>
                    <td class="text-center">{{PREGUNTAS_JUGADAS}}</td>
                    <td class="text-center">{{PREGUNTAS_ACERTADAS}}</td>
                    <td class="text-center">{{PORCENTAJE_ACIERTOS}}%</td>
                </tr>
            {{/datosJugadores}}
            {{^datosJugadores}}
                <tr>
                    <td colspan="5" class="text-center">No hay datos disponibles</td>
                </tr>
            {{/datosJugadores}}
            </tbody>
        </table>
        <a href="/Users/exportarPorcentajeAciertos" class="btn btn-primary m-1">
            <i class="fa-solid fa-file-arrow-down"></i> Exportar PDF
        </a>

        <a href="/lobby" class="btn btn-secondary m-3">Volver al lobby</a>
    </div>
</div>



<!-- Scripts de Bootstrap y jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
